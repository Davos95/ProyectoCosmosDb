@using ProyectoCosmosDb.Models
@model List<Pelicula>

@{
    ViewData["Title"] = "Ver Peliculas";
}

<h2>Peliculas</h2>

<p>
    <a asp-action="Create">Crear nueva pelicula</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Titulo
            </th>
            <th>
                TituloOriginal
            </th>
            <th>
                Sinopsis
            </th>
            <th>
                Genero
            </th>
            <th>
                Imagen
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Pelicula p in Model) {
        <tr>
            <td>@p.Id</td>
            <td>@p.Titulo</td>
            <td>@p.TituloOriginal</td>
            <td>@p.Sinopsis</td>
            <td>@p.Genero</td>
            <td>@p.Imagen</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { idPelicula = p.Id  }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
